import java.util.ArrayList;
import java.util.List;

class Solution {
    public int minimumPairRemoval(int[] nums) {
        List<Integer> arr = new ArrayList<>();
        for (int num : nums) {
            arr.add(num);
        }
        
        int ops = 0;
        while (true) {
            boolean nonDecreasing = true;
            for (int i = 0; i < arr.size() - 1; i++) {
                if (arr.get(i) > arr.get(i + 1)) {
                    nonDecreasing = false;
                    break;
                }
            }if (nonDecreasing) {
                return ops;
            }
            
            int minSum = Integer.MAX_VALUE;
            int mergeIndex = -1;
            for (int i = 0; i < arr.size() - 1; i++) {
                int sum = arr.get(i) + arr.get(i + 1);
                if (sum < minSum) {
                    minSum = sum;
                    mergeIndex = i;
                }
            }
            
            int newValue = arr.get(mergeIndex) + arr.get(mergeIndex + 1);
            arr.set(mergeIndex, newValue);
            arr.remove(mergeIndex + 1); 
            ops++;
        }
    }
}
