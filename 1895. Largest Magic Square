class Solution {
    public int largestMagicSquare(int[][] grid) {
        int m = grid.length;
        int n = grid[0].length;
        int maxK = Math.min(m, n);

        int[][] rowPrefix = new int[m + 1][n + 1];
        int[][] colPrefix = new int[m + 1][n + 1];

        for (int i = 0; i < m; i++) {
            for (int j = 0; j < n; j++) {
                rowPrefix[i + 1][j + 1] = rowPrefix[i + 1][j] + grid[i][j];
                colPrefix[i + 1][j + 1] = colPrefix[i][j + 1] + grid[i][j];
            }
        }
        for (int k = maxK; k > 1; k--) {
            for (int i = 0; i + k <= m; i++) {
                for (int j = 0; j + k <= n; j++) {
                    if (isMagicSquare(grid, i, j, k, rowPrefix, colPrefix)) {
                        return k;
                    }
                }
            }
        }
        return 1;
    }

    private boolean isMagicSquare(int[][] grid, int r, int c, int k, int[][] rowPrefix, int[][] colPrefix) {
        int firstRowSum = rowPrefix[r + 1][c + k] - rowPrefix[r + 1][c];
        for (int i = r + 1; i < r + k; i++) {
            int rowSum = rowPrefix[i + 1][c + k] - rowPrefix[i + 1][c];
            if (rowSum != firstRowSum) return false;
        }
        for (int j = c; j < c + k; j++) {
            int colSum = colPrefix[r + k][j + 1] - colPrefix[r][j + 1];
            if (colSum != firstRowSum) return false;
        }
        int diag1 = 0;
        for (int d = 0; d < k; d++) {
            diag1 += grid[r + d][c + d];
        }if (diag1 != firstRowSum) return false;
        int diag2 = 0;
        for (int d = 0; d < k; d++) {
            diag2 += grid[r + d][c + k - 1 - d];
        }if (diag2 != firstRowSum) return false;
        return true;
    }
}
