class Solution {

    public int[] minBitwiseArray(List<Integer> nums) {
        int n = nums.size();
        int[] result = new int[n];

        for (int i = 0; i < n; i++) {
            int target = nums.get(i);

            int answer = -1;
            int bitMask = 1;

            while ((target & bitMask) != 0) {
                answer = target - bitMask;
                bitMask <<= 1;
            }
            result[i] = answer;
        }
        return result;
    }
}
