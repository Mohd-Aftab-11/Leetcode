public class Solution {

    public long minimumCost(String source, String target, char[] original, char[] changed, int[] cost) {
        long[][] distances = new long[26][26];
        
        for (int i = 0; i < 26; i++) {
            Arrays.fill(distances[i], Long.MAX_VALUE);
             distances[i][i] = 0;
        }

        for (int i = 0; i < original.length; ++i) {
            int s = original[i] - 'a';
            int t = changed[i] - 'a';
            distances[s][t] = Math.min(distances[s][t], cost[i]);
        }

        for (int k = 0; k < 26; ++k) {
            for (int i = 0; i < 26; ++i) {
                for (int j = 0; j < 26; ++j) {
                    if (distances[i][k] < Long.MAX_VALUE && distances[k][j] < Long.MAX_VALUE) {
                        distances[i][j] = Math.min(distances[i][j], distances[i][k] + distances[k][j]);
                    }
                }
            }
        }

        long result = 0;
        for (int i = 0; i < source.length(); i++) {
            if (source.charAt(i) == target.charAt(i)) {
                continue;
            }
            if (distances[source.charAt(i) - 'a'][target.charAt(i) - 'a'] == Long.MAX_VALUE) {
                return -1;
            } else {
                result += distances[source.charAt(i) - 'a'][target.charAt(i) - 'a'];
            }
        }

        return result;
    }
}
