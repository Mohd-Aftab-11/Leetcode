class Solution {
    private static final int MOD = 1000000007;
    
    public int numOfWays(int n) {
        if (n == 1) return 12;
        
        long aba = 6;
        long abc = 6;
        
        for (int i = 2; i <= n; i++) {
            long newABA = (aba * 3L + abc * 2L) % MOD;
            long newABC = (aba * 2L + abc * 2L) % MOD;
            aba = newABA;
            abc = newABC;
        }
        
        return (int) ((aba + abc) % MOD);
    }
}
